<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:id="@+id/corsoDetailScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/userCourseDetailLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userCourseDetailsImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/userCourseDetailsTitolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Corso: Titolo"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                app:fontFamily="@font/roboto" />

            <TextView
                android:id="@+id/userCourseDetailsSede"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Corso: Titolo"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                app:fontFamily="@font/roboto" />

            <TextView
                android:id="@+id/userCourseDetailsDurata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Corso: Titolo"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                app:fontFamily="@font/roboto" />

            <TextView
                android:id="@+id/userCourseDetailsDescrizione"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Corso: Titolo"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                app:fontFamily="@font/roboto" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>