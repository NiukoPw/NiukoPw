<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/corsoLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_columbia"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/corsoCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        >

        <ImageView
            android:id="@+id/corsoImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:ignore="MissingConstraints"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/corsoTextViewTitolo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Corso: Titolo"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:fontFamily="@font/roboto" />

    <TextView
        android:id="@+id/corsoTextViewDurata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Durata: 32 ore"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:fontFamily="@font/roboto" />

    <TextView
        android:id="@+id/corsoTextViewSede"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sede: Padova"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:fontFamily="@font/roboto" />
</LinearLayout>

